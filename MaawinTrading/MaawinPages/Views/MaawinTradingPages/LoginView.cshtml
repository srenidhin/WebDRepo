@model MaawinPages.Models.LoginModel

@using (Html.BeginForm("LoginView", "MaawinTradingPages", new { returnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { role = "form" }))
{
    <div style="font-size:22px;margin-top:120px">
        <div class="container">
            <div class="row" style="padding-bottom:10px">
                <div class="col-md-4"></div>
                <div class="col-md-1" style="margin-right:20px">
                    <label>Username</label>
                </div>
                <div class="col-md-2">
                    @Html.TextBoxFor(m => m.username)
                </div>
            </div>
            <div class="row" style="padding-bottom:10px">
                <div class="col-md-4"></div>
                <div class="col-md-1" style="margin-right:20px">
                    <label>Password</label>
                </div>
                <div class="col-md-2" style="margin-right:20px">
                    @Html.TextBoxFor(m => m.password, new { @type = "password" })
                </div>
            </div>
            <div class="row" style="margin-right:20px;">
                <div class="col-md-6">
                </div>
                <div class="col-md-2">
                    <input type="submit" id="submit" class="btn-success" />
                </div>
            </div>
            <div class="row">
                <label style="color:red" id="Status">@ViewBag.LoginFailed</label>
            </div>
        </div>
    </div>
}